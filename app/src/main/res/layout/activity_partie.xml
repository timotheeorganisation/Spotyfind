<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBlackButton"
    tools:context=".PartieActivity">

    <Button
        android:id="@+id/btnRep1"
        android:layout_width="match_parent"
        android:textColor="@color/colorBlackButton"
        android:background="@color/colorGreenSpoty"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnRep2"
        android:layout_width="match_parent"
        android:textColor="@color/colorBlackButton"
        android:background="@color/colorGreenSpoty"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnRep3"
        android:layout_width="match_parent"
        android:textColor="@color/colorBlackButton"
        android:background="@color/colorGreenSpoty"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnRep4"
        android:layout_width="match_parent"
        android:textColor="@color/colorBlackButton"
        android:background="@color/colorGreenSpoty"
        android:layout_height="wrap_content"/>

    <TextView
    android:id="@+id/edtScore"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="100dp"
    tools:layout_editor_absoluteY="69dp" />
</LinearLayout>